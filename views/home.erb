<h1 id="home">Welcome, <%= @user.fname %>!</h1>

<div id="right_column">
	<div id="profile_photo">
		<img src="images/default-profile-pic.png" width="200" height="300">
	</div>
	<div id="link_box">
		<a href="/account" class="link_box">Account Settings</a>
		<a href="/following" class="link_box">Following</a>	
		<a href="/new-post">Create a New Twit</a>
	</div>
</div>

<div id="feed_box">
	<% @post.each do |post| %>
		<h4>Title: <i><%= post.title %></i></h4>
		<h4>Body: <i><%= post.body %></i></h4>
	<% end %>
</div>
