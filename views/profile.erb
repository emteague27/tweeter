<link rel="stylesheet" type="text/css" href="/style.css">

<link href='https://fonts.googleapis.com/css?family=Lobster|Roboto:400,400italic' rel='stylesheet' type='text/css'>

<h1>My Profile Pic  </h1>


<div id="left_column">
	<h1 id="live_feed">My Posts</h1>
	<div id="feed_box">
		<% @posts.each do |post| %>
			<div id="userposts">
				<h3 id="username"><%= post.user.username %></h3>
				<h4>Title: <i><%= post.title %></i></h4>
				<h4>Body: <i><%= post.body %></i></h4>
				<%= post.created_at %>
			</div>
			<br>
		<% end %>
	</div>
</div>

